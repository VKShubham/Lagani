<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:elevation="23dp"
    tools:context=".RegisterLogin.MainActivity">


    <TextView
        android:id="@+id/logintitle"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="59dp"
        android:gravity="center_horizontal|top"
        android:text="Login"
        android:textAppearance="@style/login" />

    <TextView
        android:id="@+id/login"
        android:layout_width="58dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="131dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:text="@string/login"
        android:textSize="22sp"
        android:textColor="#036BB9"
        android:fontFamily="@font/abhaya_libre"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/register"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="203dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:textSize="22sp"
        android:textColor="#A6A6A6"
        android:text="@string/register"
        android:fontFamily="@font/abhaya_libre"
        android:gravity="center_vertical|start"
        />

    <!-- Email Componet -->
    <ImageView
        android:id="@+id/line_3"
        android:layout_width="57dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="198dp"
        android:background="@drawable/line_3"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/component_1"
        android:layout_width="357dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="272dp"
        android:clipToOutline="true">

        <RelativeLayout
            android:id="@+id/property_1_"
            android:layout_width="317dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/email"
                style="@style/NoUnderlineEditText"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/emailimage"
                android:fontFamily="@font/abhaya_libre"
                android:hint="Email Address"
                android:textColorHint="#A6A6A6"
                tools:ignore="TouchTargetSizeCheck" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"
                android:id="@+id/emailimage"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="317dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/line_1"
            android:visibility="visible"/>
    </RelativeLayout>

    <!-- Password Componet -->

    <RelativeLayout
        android:id="@+id/component_2"
        android:layout_width="357dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="371dp"
        android:clipToOutline="true">

        <RelativeLayout
            android:id="@+id/property_2_"
            android:layout_width="317dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/password"
                style="@style/NoUnderlineEditText"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@id/lockimage"
                android:fontFamily="@font/abhaya_libre"
                android:hint="@string/password"
                android:textColorHint="#A6A6A6"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/lockimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock" />

            <ImageView
                android:id="@+id/showpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/password"
                android:src="@drawable/ic_password_toggle_on" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_2"
            android:layout_width="317dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/line_1"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- Check -->

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="339dp"
        android:src="@drawable/rectangle_6" />

    <ImageView
        android:id="@+id/group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkbox"
        android:layout_alignBottom="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="469dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/check"
        android:visibility="visible" />

    <TextView
        android:id="@+id/remember_me"
        android:layout_width="176dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="462dp"
        android:gravity="top"
        android:text="@string/remember_me"
        android:fontFamily="@font/abhaya_libre"
        android:textColor="#6B5E5E"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="13dp"
        android:gravity="top"
        android:text="@string/forget_password"
        android:fontFamily="@font/abhaya_libre"
        android:textColor="#0386D0"
        android:textSize="21sp" />

    <RelativeLayout
        android:id="@+id/frame_16"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="520dp"
        android:background="@drawable/frame_16"
        android:elevation="4dp">

        <TextView
            android:id="@+id/resetbtn"
            android:layout_width="316dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_11"
        android:layout_width="wrap_content"
        android:layout_height="304dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="555dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/loginlower" />

</RelativeLayout>